@using BlazorApp.Components.Base
@inject NavigationManager NavigationManager
@inject BlazorApp.Data.ToastService toastService


<div class="my-12 px-10">

    <div class="w-fit mx-auto text-center my-5">
        <Heading>
            <Superscript>
            </Superscript>
            <Header>
                <h1 class="text-3xl">Next Steps</h1>
            </Header>
            <Subscript>
                <p class="text-primary-700 max-w-xl">Embracing complete independence for your home and brightening your days with solar power, is only a few steps away!</p>
            </Subscript>
        </Heading>
    </div>

    <div class="mt-8 flex flex-col lg:flex-row justify-center items-center mx-auto">
      @* Get a solar score *@
      <div class="flex-col relative">
        <Image css="absolute top-8 left-10 -z-50 scale-[1.3]" ImageName="02.png" alt="02"/>
        <div class="bg-gray-100 shadow rounded-3xl p-8 w-24 h-24 m-auto">
          <Image ImageName="UserPlus.svg" alt="Score" />
        </div>

        <div class="text-center max-w-sm mx-auto mt-4">
          <Heading>
            <Header>
              <h1 class="font-semibold text-2xl leading-[150%] tracking-tight	">Log In or Sign Up</h1>
            </Header>
            <Subscript>
              <p class="font-normal">Login or Register to access more tools to help you discover the perfect system for your needs.</p>
            </Subscript>
          </Heading>
        </div>
      </div>

      <div class="flex-col hidden lg:block">
        <Image ImageName="Line.svg" alt="Line"/>
      </div>
      <div class="flex-col w-full lg:hidden">
        <Image ImageName="line-down.svg" css="mx-auto" alt="Line"/>
      </div>

      @* Get a report *@
      <div class="flex-col relative">
        <Image css="absolute top-8 left-10 -z-20 scale-[1.3]" ImageName="03.png" alt="03"/>
        <div class="relative bg-gray-100 shadow rounded-3xl p-8 w-24 h-24 mx-auto">
          <Image ImageName="Sale.svg" css="z-10" alt="Report"/>
        </div>

        <div class="text-center max-w-sm mx-auto mt-4">
          <Heading>
            <Header>
              <h1 class="font-semibold text-2xl leading-[150%] tracking-tight	">Get Personalised Calculations</h1>
            </Header>
            <Subscript>
              <p class="font-normal">Empower Your Choices with Personalized Calculations: Discover the Best System for You.</p>
            </Subscript>

          </Heading>
        </div>
      </div>
      
      <div class="flex-col hidden lg:block">
        <Image ImageName="Line.svg" alt="Line"/>
      </div>
      <div class="flex-col w-full lg:hidden">
        <Image ImageName="line-down.svg" css="mx-auto" alt="Line"/>
      </div>
      @* Get a report *@
      <div class="flex-col relative">
        <Image css="absolute top-8 left-10 -z-20 scale-[1.3]" ImageName="04.png" alt="04"/>
        <div class="relative bg-gray-100 shadow rounded-3xl p-8 w-24 h-24 mx-auto">
          <Image ImageName="Pie Chart 2.svg" css="z-10" alt="Report"/>
        </div>

        <div class="text-center max-w-sm mx-auto mt-4">
          <Heading>
            <Header>
              <h1 class="font-semibold text-2xl leading-[150%] tracking-tight	">Get Report</h1>
            </Header>
            <Subscript>
              <p class="font-normal">Gain comprehensive insights with a detailed solar report for informed decision-making.</p>
            </Subscript>
          </Heading>
        </div>
      </div>

      <div class="flex-col hidden lg:block">
        <Image ImageName="Line.svg" alt="Line"/>
      </div>
      <div class="flex-col w-full lg:hidden">
        <Image ImageName="line-down.svg" css="mx-auto" alt="Line"/>
      </div>

      @* Get a report *@
      <div class="flex-col relative">
        <Image css="absolute top-8 left-10 -z-20 scale-[1.3]" ImageName="05.png" alt="05"/>
        <div class="relative bg-gray-100 shadow rounded-3xl p-8 w-24 h-24 mx-auto">
          <Image ImageName="Pie Chart 2.svg" css="z-10" alt="Report"/>
        </div>


        <div class="text-center max-w-sm mx-auto mt-4">
          <Heading>
            <Header>
              <h1 class="font-semibold text-2xl leading-[150%] tracking-tight	">Get in touch</h1>
            </Header>
            <Subscript>
              <p class="font-normal">Contact your nearest Solar service provider.</p>
            </Subscript>
          </Heading>
        </div>
      </div>
    </div>
</div>

@code {
  
    private async void ShowLoadingScreen()
    {
        toastService.ShowToast("Hello", "Please wait while we load the calculator", "info");
        await Task.Delay(3000);

    }

    //Change to register page
    private void Register()
    {
        NavigationManager.NavigateTo("/register");
    }

    //Change to advanced page
    private void AdvancedCalculation() 
    {
        NavigationManager.NavigateTo("/advanced");
    }

    private void GetInTouch()
    {
        NavigationManager.NavigateTo("/getintouch");
    }
}