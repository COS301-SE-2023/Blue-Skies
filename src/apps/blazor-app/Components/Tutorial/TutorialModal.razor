@inject BlazorApp.Data.TutorialService tutorialService

<div class="opacity-90 bg-slate-900 w-full h-full flex fixed top-0 left-0 "></div>
<div class="absolute top-0 left-0 w-full h-full">
    @ChildContent
</div>
<div @onclick="HideTutorial" class="fixed w-14 h-14 cursor-pointer top-10 right-10 text-white font-bold text-3xl">
    X
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    public void HideTutorial()
    {
        tutorialService.HideTutorial();
    }
}