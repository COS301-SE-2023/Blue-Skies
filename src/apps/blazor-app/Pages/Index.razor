@using System.Text.Json;
@inject ProtectedSessionStorage ProtectedSessionStore

<PageTitle>Blue Skies - Home</PageTitle>

<div class="fade-in-enter-active">
  @if (isLoaded)
  {
    @if (isAd)
    {
      loadingService.ShowLoadingScreen();
      NavigationManager.NavigateTo("/admin/keys");
    }
    else
    {
      <div class="w-full relative">
        <BlazorApp.Components.Home.Hero />
        
            @* How it works *@
            <Image ImageName="shapes.svg" css="absolute -top-96 -translate-y-28 md:-translate-y-0  -z-10 -left-1/2  mw-2/3 -translate-y-28  md:-translate-y-0 scale-[2] md:scale-100 w-2/3 h-2/3" alt="Shapes"/>
            <div class="mt-36 relative -z-10">
              <Image ImageName="Robert_Pointing.png" css="absolute -top-24 md:top-0 -z-10 left-16 md:left-32 robert-slide-up h-52 md:h-72" alt="Rob"/>
              <BlazorApp.Components.Home.HowItWorks />
            </div>         

            @* Frequently Asked Questions *@
            <div class="mt-72 lg:mt-44 mb-40 relative">
              <Image ImageName="shapes.svg" css="absolute -top-1/3 -z-20 -right-1/2 w-full h-full" alt="Shapes"/>
              <Image ImageName="shapes.svg" css="absolute sm:hidden -bottom-1/3 -z-20 -right-1/2 w-full h-full" alt="Shapes"/> 
              <Image ImageName="Robert_Confused.png" css="absolute -bottom-40 sm:-top-60 lg:-top-32 right-10 xl:right-16 h-60 lg:h-80" alt="Rob"/>
              <Image ImageName="Panels.svg" css="absolute -bottom-40 sm:-top-52 lg:-top-20 -z-20 left-2 xl:left-8 h-40 xl:h-52" alt="Shapes"/>
              <BlazorApp.Components.Home.FAQ />
            </div>

           
            @* chatbot *@
            <div class="mt-36 lg:mt-96 mb-40 relative">
              <Image ImageName="shapes.svg" css="absolute rotate-45 rotate-180 -top-16 -left-1/3 -z-20 w-max h-max" alt="Shapes"/>
              <Chatbot />
            </div>

             @* Unlock your full potential *@
            <BlazorApp.Components.Home.CTA />

            
        </div>
    }
  }
</div>


@code {
  private SharedUtils.locationDataClass locationDataClass = new SharedUtils.locationDataClass();
  private bool isAd = false;
  private bool isLoaded = false;

  /// <summary>
  /// On page load, check if user is admin
  /// </summary>
  protected override async Task OnInitializedAsync()
  {
    GdalBase.ConfigureAll();
    var isAdmin = await ProtectedLocalStore.GetAsync<bool>("isAdmin");
    await ProtectedSessionStorage.SetAsync("parent", "index");
    isAd = isAdmin.Value;
    isLoaded = true;
    loadingService.HideLoadingScreen();

    var exists = await ProtectedSessionStore.GetAsync<double>("latitude");
    if (!exists.Success)
    {
      await ProtectedSessionStore.SetAsync("latitude", 0);
      await ProtectedSessionStore.SetAsync("longitude", 0);
    }
  }

  /// <summary>
  /// Navigate to register page
  /// </summary>
  void Register()
  {
    loadingService.ShowLoadingScreen();
    NavigationManager.NavigateTo("/register");
  }
}